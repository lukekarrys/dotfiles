#! /usr/bin/env bash

local_path='/Users/lukekarrys/Downloads/'
volume_path='/Volumes/Data/'
empty=''

find ~/Downloads -type f \( -name "*.mp4" -or -name "*.avi" -or -name "*.mkv" \) -print0 | while IFS= read -r -d '' file; do
    volume_file=${file/$local_path/$volume_path}
    file_name=${file/$local_path/$empy}
    if [ ! -f "$volume_file" ]
    then
      echo "copying $file_name"
      cp $file $volume_file
    fi
done